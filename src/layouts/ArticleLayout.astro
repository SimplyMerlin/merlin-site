---
import NavBar from "../components/NavBar.astro";

export interface Props {
  title?: string;
  page: string;
  extraClasses?: string;
}

const { title, page, extraClasses } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class={extraClasses}>
    <NavBar page={page} title={title} />
    <slot />
  </body>
</html>
