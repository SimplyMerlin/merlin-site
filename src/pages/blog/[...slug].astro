---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Layout title="Blog" page=`blog-${entry.slug}` extraClasses="bg-orange-50 text-stone-900">
  <div class="mx-auto max-w-2xl pt-32">
    <h1 class="text-3xl tracking-tight font-bold text-balance">{entry.data.title}</h1>
    <time class="text-stone-600" datetime={entry.data.datePublished.toISOString()}>
      {
        entry.data.datePublished.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        })
      }
    </time>
    <article class="pt-8 prose prose-stone mx-auto prose-a:text-blue-600 prose-a:no-underline after:prose-a:content-['_â†—']">
      <Content />
    </article>
  </div>
</Layout>